@model List<Sklep.Models.CMS.Aktualnosc>

<div>
    <h2>Aktualnosci</h2>
    <table class="table table-striped table-hover">
        <thead class="bg-primary">
            <tr>
                <th>ID</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Treść</th>
                <th scope="col">Pozycja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                 <tr>
                     <th scope="row">@item.IdAktualnosc</th>
                     <td>@item.Tytul</td>
                     <td>@item.TrescAktualnosci</td>
                     <td>@item.PozycjeWyswietlania</td>
                 </tr>
            }
        </tbody>
    </table>
</div>
