@model Sklep.Models.Sklep.Zamowienie
@{
    ViewBag.Title = "DaneZamowienia";
}

<h2>Dane Zamówienia</h2>
@using (Html.BeginForm("DaneZamowienia", "Koszyk", FormMethod.Post, new { @class = "Form-Horizontal", role = "Form" }))
{
    @Html.AntiForgeryToken();
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8 obramowanieTowaru"
                 style="margin-top: 20px; margin-bottom: 20px;">
                <h4>Uzupełnij dane zamówienia</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Imie, new
                    {
                        @class = "col-md-4 control-label" })
                    <div class="col-md-8">


                        @Html.TextBoxFor(m => m.Imie, new { @class = "formcontrol" })
                        @Html.ValidationMessageFor(m => m.Imie, null, new
                        {
                       @class = "text-danger"
                        })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Nazwisko, new
                    {
                        @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Nazwisko, new { @class = "formcontrol" })
                        @Html.ValidationMessageFor(m => m.Nazwisko, null, new
                        {
                       @class = "text-danger"
                        })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AdresEmail, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.AdresEmail, new { @class = "formcontrol" })
                        @Html.ValidationMessageFor(m => m.AdresEmail, null, new
                        {
                       @class = "text-danger"
                        })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefon, new{ @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Telefon, new { @class = "formcontrol" })
                        @Html.ValidationMessageFor(m => m.Telefon, null, new
                        {
                       @class = "text-danger"
                        })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Adres, new{ @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Adres, new { @class = "formcontrol" })
                        @Html.ValidationMessageFor(m => m.Adres, null, new
                        {
                       @class = "text-danger"
                        })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="gadzetBtn btn-default"
                               value="Zapisz" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
